<?xml version="1.0" encoding="UTF-8"?>
<suite name="QuantumLeap E-Commerce Test Suite" verbose="2" parallel="false" thread-count="1">
    
    <!-- Suite level parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>
    
    <!-- Listeners for reporting -->
    <listeners>
        <listener class-name="com.quantumleap.framework.listeners.ExtentTestListener"/>
        <listener class-name="org.testng.reporters.EmailableReporter"/>
        <listener class-name="org.testng.reporters.JUnitReportReporter"/>
    </listeners>
    
    <!-- Smoke Test Suite - Critical functionality tests -->
    <test name="Smoke Tests" preserve-order="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.quantumleap.tests.ui.LoginTests">
                <methods>
                    <include name="testValidLogin"/>
                    <include name="testLockedOutUser"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Login Test Suite - Comprehensive login functionality -->
    <test name="Login Tests" preserve-order="true">
        <groups>
            <run>
                <include name="login"/>
            </run>
        </groups>
        <classes>
            <class name="com.quantumleap.tests.ui.LoginTests"/>
        </classes>
    </test>
    
    <!-- End-to-End Test Suite - Complete user journeys -->
    <test name="End-to-End Tests" preserve-order="true">
        <groups>
            <run>
                <include name="e2e"/>
            </run>
        </groups>
        <classes>
            <class name="com.quantumleap.tests.ui.EndToEndPurchaseTests"/>
        </classes>
    </test>
    
    <!-- BDD Cucumber Test Suite -->
    <test name="BDD Tests" preserve-order="true">
        <groups>
            <run>
                <include name="bdd"/>
                <include name="cucumber"/>
            </run>
        </groups>
        <classes>
            <class name="com.quantumleap.tests.runners.CucumberTestRunner"/>
        </classes>
    </test>
    
    <!-- Smoke BDD Test Suite -->
    <test name="Smoke BDD Tests" preserve-order="true">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="bdd"/>
            </run>
        </groups>
        <classes>
            <class name="com.quantumleap.tests.runners.SmokeTestRunner"/>
        </classes>
    </test>
    
    <!-- API Test Suite - REST Assured CRUD tests -->
    <test name="API Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="crud"/>
            </run>
        </groups>
        <classes>
            <class name="com.quantumleap.tests.api.ReqResApiTests"/>
        </classes>
    </test>
    
    <!-- Regression Test Suite - All tests -->
    <test name="Regression Tests" preserve-order="false">
        <groups>
            <run>
                <include name="regression"/>
                <include name="ui"/>
                <include name="api"/>
            </run>
        </groups>
        <packages>
            <package name="com.quantumleap.tests.ui.*"/>
            <package name="com.quantumleap.tests.api.*"/>
        </packages>
    </test>
    
</suite>
